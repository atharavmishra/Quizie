<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:padding="25dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:fontFamily="@font/robotomedium"
                android:text="@string/success"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/gifDelivery"
                app:layout_constraintEnd_toEndOf="@+id/gifDelivery"
                app:layout_constraintStart_toStartOf="@+id/gifDelivery" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifDelivery"
                android:layout_width="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvSuccess"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/delievery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDeliveredSuccessful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gifDelivery"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center|bottom"
                android:layout_margin="-15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/robotomedium"
                android:gravity="center"
                android:text="@string/order_received"
                android:textColor="#F18637"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/gifDelivery"
                app:layout_constraintEnd_toEndOf="@+id/gifDelivery"
                app:layout_constraintStart_toStartOf="@+id/gifDelivery" />

            <Button
                android:id="@+id/btnOkay"
                android:layout_width="170dp"
                android:hapticFeedbackEnabled="true"
                android:layout_height="50dp"
                android:background="@drawable/button_bakcground"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:text="@string/dialog_ok"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvDeliveredSuccessful"/>

        </RelativeLayout>





    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>